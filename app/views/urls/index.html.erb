<p id="notice"><%= notice %></p>
<h1>All URLs</h1>

<%= link_to 'New URL', new_url_path, class: 'btn btn-primary my-2' %>

<table class="table">
  <thead>
    <tr>
      <th scope="col">Short URL</th>
      <th scope="col">Original URL</th>
      <th scope="col" colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @urls.each do |url| %>
      <tr>
        <td>wwcode.jp/<%= url.slug %></td>
        <td><%= url.original_url %></td>
        <td><%= link_to 'Visit URL', url %></td>
        <td><%= link_to 'Edit', edit_url_path(url) %></td>
        <td><%= link_to 'Destroy', url, method: :delete, data: { confirm: 'Are you sure you want to delete this URL? This will break all references to this link published anywhere.' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
