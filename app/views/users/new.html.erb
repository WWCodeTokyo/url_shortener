<div class="container list-container">
  <h3 class="mt-3"><%= I18n.t('users.new.title') %></h3>
  <%= form_for(@user, url: users_path(@user)) do |f| %>
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, autocomplete: "name", class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :email %>
      <%= f.email_field :email, autocomplete: "email", class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.submit I18n.t('common.save'), class: "btn btn-primary"  %>
    </div>
  <% end %>
</div>
